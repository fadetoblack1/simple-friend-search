.friend-list
    list-style none
    margin 0
    padding 0

    &-wrapper
        width 400px
        margin 0 auto
        box-shadow rgba(0, 0, 0, 0.25) 0 14px 20px, rgba(0, 0, 0, 0.22) 0 10px 18px

    &__title
        background-color rgb(0, 188, 212)
        color #fff
        padding 10px
        text-transform uppercase
        font-weight 500

    &__item
        position relative
        display flex
        padding 20px
        border-bottom 1px solid rgb(232, 232, 232)
        
        &:hover,
        &:focus
            .friend-list__remove
                opacity 1

    &__data
        padding 20px
        padding-right 0

    &__name
        margin-bottom 20px
        text-transform uppercase
        font-weight 500
        color rgb(121, 121, 121)

    &__img
        width 100px
        height 100px
        border-radius 50%

    &__search-field
        font-family Roboto
        font-size 16px
        width 100%
        padding 10px
        border none
        border-bottom 1px solid rgb(232, 232, 232)
        outline none

        &+.input-animate
            height 1px
            position relative
            margin-top -1px
            
            &::after
                content ''
                height 1px
                position absolute
                left 0
                width 0
                background-color rgb(0, 188, 212)
                transition 300ms width
        
        &:focus
            +.input-animate
                &::after
                    width 100%
                    transition 300ms width


    &__remove
        background transparent
        border none
        outline none
        width 20px
        height 20px
        cursor pointer
        position absolute
        top 10px
        right 10px
        opacity 0
        transition 200ms opacity
        
        &::before,
        &::after
            position absolute
            content ''
            display block
            height 15px
            width 2px
            background-color #000
            transform-origin center

        &::before
            transform rotate(45deg)

        &::after
            transform rotate(-45deg)

    &__tel
        text-decoration none
        color #009587
    
        &:hover,
        &:focus
            text-decoration underline